@import "../base/000_vars.scss";

<% TagCategory.css_mapping.each do |category,cssmap| %>
  .category-<%= category %> a, a.tag-type-<%= category %>, .ui-widget-content a.tag-type-<%= category %> {
    color: <%= cssmap["color"] %>;

    &:link, &:visited {
      color: <%= cssmap["color"] %>;
    }

    &:hover {
      color: <%= cssmap["hover"] %>;
    }

    &.selected {
      color: white;
    }
  }

  .ui-widget-content .ui-state-active a.tag-type-<%= category %> {
    color: <%= cssmap["hover"] %>;

    &:link, &:visited {
      color: <%= cssmap["color"] %>;
    }

    &:hover {
      color: <%= cssmap["hover"] %>;
    }

    &.selected {
      color: white;
    }
  }
<% end %>

.category-banned a, a.tag-type-banned, .ui-state-active a.tag-type-banned {
  color: black;
  background-color: red;
}

.inline-tag-list {
  ul {
    display: inline;

    li {
      display: inline;
      margin-right: 0.5em;
    }
  }
}

.split-inline-tag-list {
  @extend .inline-tag-list;

  ul {
    display: block;
  }
}
