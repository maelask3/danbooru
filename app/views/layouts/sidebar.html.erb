<% content_for(:layout) do %>
  <div id="c-<%= params[:controller].parameterize.dasherize %>">
    <div id="a-<%= params[:action].parameterize.dasherize %>" class="sidebar-container">
      <aside id="sidebar">
        <%= yield :sidebar %>
      </aside>

      <section id="content">
        <%= yield :content %>
      </section>
    </div>
  </div>
<% end %>

<%= render template: "layouts/default" %>
